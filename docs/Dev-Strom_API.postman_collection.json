{
	"info": {
		"_postman_id": "dev-strom-api-collection",
		"name": "Dev-Strom API",
		"description": "Start API: uvicorn api:api --reload",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get Ideas",
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"tech_stack\": \"React, Node.js, PostgreSQL\",\n    \"domain\": \"\",\n    \"level\": \"\",\n    \"enable_multi_query\": true,\n    \"count\": 5\n}"
				},
				"url": "http://localhost:8000/ideas",
				"description": "Required: tech_stack. Optional: domain, level (strings), enable_multi_query (bool), count (1-5, default 3)."
			}
		},
		{
			"name": "2. Expand",
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"pid\": 1\n}"
				},
				"url": "http://localhost:8000/expand",
				"description": "Call after Get Ideas. pid = idea id (1, 2, 3, ...)."
			}
		},
		{
			"name": "3. Export",
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"pid\": 1\n}"
				},
				"url": "http://localhost:8000/export",
				"description": "Call after Expand. Returns markdown file for that idea."
			}
		}
	]
}
